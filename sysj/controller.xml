<System>
  <Interconnection>
    <Link Type="Destination">
      <!--Interface example: -->
      <!--<Interface SubSystem="SS1" Class="systemj.desktop.TCPIPInterface" Args="127.0.0.1:1100">-->
      <!--<Interface SubSystem="SS2" Class="systemj.desktop.TCPIPInterface" Args="127.0.0.1:1200">-->
      <!--.....-->
    </Link>
  </Interconnection>
  <SubSystem Name="SS1" Local="true">
    <ClockDomain Name="ControllerCD" Class="Controller">
      <iSignal Name="pusherRetracted" Class="systemj.signals.network.SimpleServer" IP="127.0.0.1" Port="10000"/>
      <iSignal Name="pusherExtended" Class="systemj.signals.network.SimpleServer" IP="127.0.0.1"  Port="10000"/>
      <iSignal Name="WPgripped" Class="systemj.signals.network.SimpleServer" IP="127.0.0.1"       Port="10000"/>
      <iSignal Name="armAtSource" Class="systemj.signals.network.SimpleServer" IP="127.0.0.1"     Port="10000"/>
      <iSignal Name="armAtDest" Class="systemj.signals.network.SimpleServer" IP="127.0.0.1"       Port="10000"/>
      <iSignal Name="empty" Class="systemj.signals.network.SimpleServer" IP="127.0.0.1"           Port="10000"/>
      <iSignal Name="request" Class="systemj.signals.network.SimpleServer" IP="127.0.0.1"         Port="10000"/>

      <oSignal Name="pusherExtend"  To="PlantCD.pusherExtend"  Class="systemj.signals.network.SimpleClient" IP="127.0.0.1"   Port="10001" />
      <oSignal Name="pusherRetract" To="PlantCD.pusherRetract" Class="systemj.signals.network.SimpleClient" IP="127.0.0.1"   Port="10001" />
      <oSignal Name="vacOn"         To="PlantCD.vacOn"         Class="systemj.signals.network.SimpleClient" IP="127.0.0.1"   Port="10001" />
      <oSignal Name="armSource"     To="PlantCD.armSource"     Class="systemj.signals.network.SimpleClient" IP="127.0.0.1"   Port="10001" />
      <oSignal Name="armDest"       To="PlantCD.armDest"       Class="systemj.signals.network.SimpleClient" IP="127.0.0.1"   Port="10001" />
    </ClockDomain>
  </SubSystem>
</System>
